<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="POMMADAM.Views.ModifReservation"
             Title="Modification">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lblForVehicule" Text="Véhicule :"/>
            <Picker x:Name="pckVehicule" Title="Sélectionner un véhicule" ItemDisplayBinding="{Binding Nom}"/>
            <Label x:Name="lblForDateD" Text="Date de début :" />
            <DatePicker x:Name="dpDateD"/>
            <TimePicker x:Name="tpDateD"/>
            <Label x:Name="lblForDateF" Text="Date de fin :" />
            <DatePicker x:Name="dpDateF"/><TimePicker x:Name="tpDateF" />
            <Button x:Name="btnVal" Text="Confirmer" Clicked="ConfirmerModif" />
            <Button x:Name="btnCancel" Text="Annuler" Clicked="AnnulerModif" />
            <Button x:Name="btnDelete" Text="Supprimer" Clicked="Supprimer" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>